<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Calculator_activity">

    <TextView
        android:id="@+id/textViewcalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:maxLength="12"
        android:text="@string/zero_num"
        android:textSize="80sp"
        android:gravity="end"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/Tablelayoutcalculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/Tablelayoutcalculator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="fill"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcalculator">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/Clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/clear_sym"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Plusminus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/plus_minus_sym"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/percent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/percent_sym"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/divide_sym"
                android:backgroundTint="@color/buop"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/Seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/seven_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/eight_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/nine_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/multiply_sym"
                android:backgroundTint="@color/buop"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/Four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/four_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/five_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/six_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Substract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/substract_sym"
                android:backgroundTint="@color/buop"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/One"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/one_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/two_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/three_num"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textSize="25sp"
                android:text="@string/add_sym"
                android:backgroundTint="@color/buop"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/Zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="2.1"
                android:text="@string/zero_num"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>

            <Button
                android:id="@+id/Decimal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/decimal_sym"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/whiteback"/>


            <Button
                android:id="@+id/Equals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/equal_sym"
                android:textSize="25sp"
                android:backgroundTint="@color/buop"/>

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>